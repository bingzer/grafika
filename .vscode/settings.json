{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "node_modules/": true,
        "bower_components/": true,
        "**/grafika.mongodb/": true,

        "**/index.js": true,
        "**/index.js.map": true,
        "**/.tscache": true,
        "**/typings/globals": true,
        "**/*.tmp.txt": true,
        "**/*.log": true,

        "server/configs/*.js": true,
        "server/controllers/*.js": true,
        "server/libs/*.js": true,
        "server/models/*.js": true,
        "server/workers/*.js": true,

        "**/**.js.map": true
