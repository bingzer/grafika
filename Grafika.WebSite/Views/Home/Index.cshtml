@section scripts {
    <script type="text/javascript" src="~/js/grafika.js"></script>
    <script type="text/javascript" src="~/js/grafika.demo.js"></script>
    <script type="text/javascript" defer>
        (function ($) {
            "use strict"; // Start of use strict

            var grafika = new Grafika();
            grafika.initialize('#header-canvas', { debugMode: true, loop: true, useCarbonCopy: false, useNavigationText: false });
            grafika.demo.initialize('alphabet');
            grafika.play();

            window.headerGrafika = grafika;
        })(jQuery);
    </script>
}

@section styles {
    <style type="text/css">
        #header-content {
            z-index: 20;
        }

        #header-canvas-container {
            width: 100%;
            position: absolute;
            display: inline;
            top: 0;
            left: 0;
            background-color: rgba(0, 128, 128, 1);
        }

        #header-canvas {
            width: 100%;
            height: 350px;
        }
    </style>
}