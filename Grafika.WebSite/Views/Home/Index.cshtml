@model HomeViewModel

@{
    ViewData["Title"] = "Index";
}
<header style="background: none">
    <div id="header-canvas-container">
        <canvas id="header-canvas"></canvas>
    </div>
    <div id="header-content" class="header-content">
        <div class="row text-center" style="padding: 8px">
            <img src="~/img/logo.png" alt="Grafika Logo" height="100" />
        </div>
        <div class="header-content-inner">
            <h1 id="homeHeading">A simpler animation maker</h1>
            <hr>
            <p class="font-larger">
                Create a simple stop-motion animation using your device.<br/>
                <span id="animation-author" class="font-smaller" style="margin: 8px; font-weight: 700"></span>
            </p>
            <a href="#series" class="btn btn-danger btn-xl page-scroll">Explore More</a>
            <a id="btn-random-animation" href="javascript: void(0)" class="btn btn-default btn-xl" onclick="home.loadRandomAnimation()">Next Animation</a>
        </div>
    </div>
</header>
<aside class="bg-dark no-padding" id="series" style="padding-bottom: 50px">
    <div class="container-fluid">
        <div class="row no-gutter popup-gallery">
            @foreach (var animation in Model.HandpickedSeries.Animations.PickRandom(6))
            {
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                    <a href="/animations/@animation.Id/player?autoPlay=true&templateName=%7E%2FViews%2FHome%2F_PlayerPopup.cshtml" 
                       class="portfolio-box" style="background-image: linear-gradient(rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.3)), url('@animation.GetThumbnailUrl()')">
                        <div class="portfolio-box-caption">
                            <div class="portfolio-box-caption-content">
                                <div class="project-category text-faded">
                                    @animation.Name
                                </div>
                                <div class="project-name">
                                    by @animation.Author
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
        <div class="row text-center">
            <hr class="light">
            <p class="text-faded font-larger">
                Animations are editable and viewable in any modern browser that supports HTML5.<br/>
                This makes Grafika Animations are playable in any modern device.
            </p>
            <p class="font-larger">
                <a href="/animations" class="btn btn-xl btn-danger">Browse more animations</a>
            </p>
        </div>
    </div>
</aside>
<section class="bg-primary landing" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <i class="fa fa-4x fa-share-alt sr-icons sr-contact"></i>
                <h2 class="section-heading">Share everything!</h2>
                <p style="font-size: smaller">Or not</p>
                <hr class="light">
                <p class="text-faded font-larger">
                    It's up to you to decide.<br/>
                    You own your animations and share them with the world or keep them private.<br/>
                    You can also comment or rate other animations as you wish
                </p>
                <a href="#services" class="page-scroll btn btn-default btn-xl sr-button">Get Started!</a>
            </div>
        </div>
    </div>
</section>
<section id="services" class="landing">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">About this little project</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-4 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-globe text-primary sr-icons sr-contact"></i>
                    <h3>Community</h3>
                    <p class="text-muted font-larger">
                        More than XX animations...<br/>
                        More than XX users and counting...
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-cubes text-primary sr-icons sr-contact"></i>
                    <h3>Cross-Platform</h3>
                    <p class="text-muted font-larger">
                        Everything is BETA. We're still cooking the Web and Android app, but feel free to test it out.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-code text-primary sr-icons sr-contact"></i>
                    <h3>Contribute</h3>
                    <p class="text-muted font-larger">
                        Many ways to contribute to better this project. Find out how!
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<aside class="bg-dark landing">
    <div class="container text-center">
        <div class="call-to-action">
            <h2>Try Grafika now!</h2>
            <a href="http://startbootstrap.com/template-overviews/creative/" class="btn btn-default btn-xl sr-button">Google Play Store</a>
            <a href="http://startbootstrap.com/template-overviews/creative/" class="btn btn-default btn-xl sr-button">Online</a>
        </div>
    </div>
</aside>
<section class="landing" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading">Let's Get Social</h2>
                <hr class="primary">
                <p class="font-larger">Keep the community growing by joining our networks over in social media</p>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <i class="fa fa-facebook fa-2x sr-contact"></i>
                <p class="font-larger">Grafika App</p>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <i class="fa fa-twitter fa-2x sr-contact"></i>
                <p class="font-larger"><a href="mailto:your-email@your-domain.com">@@grafikapp</a></p>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <i class="fa fa-google-plus fa-2x sr-contact"></i>
                <p class="font-larger"><a href="mailto:your-email@your-domain.com">@@grafikapp</a></p>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <i class="fa fa-envelope fa-2x sr-contact"></i>
                <p class="font-larger"><a href="mailto:your-email@your-domain.com">@@grafikapp</a></p>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script type="text/javascript" src="~/js/grafika.js"></script>
    <script type="text/javascript" src="~/js/grafika.demo.js"></script>
    <script type="text/javascript" src="~/js/GrafikaApp.Player.js"></script>
    <script type="text/javascript" src="~/js/home/GrafikaApp.Home.js"></script>
}
@section styles {
    <link href="~/css/home.css" rel="stylesheet" type="text/css" />
}