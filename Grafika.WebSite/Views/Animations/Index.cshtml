@model AnimationsViewModel
@{
    ViewBag.Title = "Public Animations";
}

<header class="bg-dark" style="min-height: 51px;">
</header>
<section class="bg-dark" style="margin-top: -51px; padding-left: 16px; padding-right: 16px">
    <h1>Public Animations</h1>
    <p>Here you can find animations</p>
</section>
<section class="page-wrapper" style="padding-top: 16px">
    @foreach(var anim in Model.Animations)
    {
        <div class="col-sm-6 col-md-4 col-lg-2">
            @await Html.PartialAsync("_Thumbnail", anim)
        </div>
    }
</section>
