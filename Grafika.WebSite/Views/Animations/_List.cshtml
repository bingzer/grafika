@model AnimationsViewModel
@{
    Layout = null;
}

<div class="animations-list">
    @foreach (var anim in Model.Animations)
    {
        var linkUrl = $"/animations/{anim.Id}";
        <div class="col-sm-6 col-md-4 col-lg-2">
            <div class="thumbnail" style="height: 272px; position: relative; padding: 0">
                <a href="@linkUrl" style="height: 138px">
                    <img src="@anim.GetThumbnailUrl()" alt="@anim.Name" style="height: 138px; max-height: 138px; width: 100%">
                </a>
                <div class="caption" style="font-size: smaller">
                    <h4 style="margin-bottom: 2px; margin-top: 2px">
                        <a href="@linkUrl" class="font-stronger">@anim.Name</a>
                        @if (anim.IsPublic == false)
                        {
                            <i class="fa fa-lock font-smaller text-muted" title="This animation is private. Can only be viewed by you"></i>
                        }
                    </h4>
                    <h6 style="margin-top: 0">
                        <img src="@anim.GetAuthorThumbnail()" alt="@anim.Author" class="img-circle user-avatar" />
                        <a href="/users/@anim.UserId">
                            @anim.Author
                        </a>
                    </h6>
                    <p style="word-wrap: break-word">
                        @if (anim.Description.IsNullOrEmptyOrWhitespace())
                        {
                            <span class="text-muted">(no description)</span>
                        }
                        else
                        {
                            @anim.Description
                        }
                    </p>
                    <div style="position: absolute; bottom: 8px; right: 8px">
                        <span class="font-smaller text-muted">
                            @anim.TotalFrame frames &#8226; @anim.Views views
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
