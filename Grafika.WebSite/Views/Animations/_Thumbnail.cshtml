@model Animation
@{
    var linkUrl = $"/animations/{Model.Id}";
}

<div class="thumbnail" style="height: 284px">
    <a href="@linkUrl">
        <img src="@Model.GetThumbnailUrl()" alt="@Model.Name" style="max-height: 138px">
    </a>
    <div class="caption" style="font-size: smaller">
        <h4 style="margin-bottom: 2px">
            <a href="@linkUrl" class="font-stronger">
                @Model.Name
            </a>
        </h4>
        <h6 style="margin-top: 0">
            <img src="@Model.GetAuthorThumbnail()" alt="@Model.Author" class="img-circle user-avatar"/>
            <a href="/users/@Model.UserId">
                @Model.Author
            </a>
        </h6>
        <p>@Model.Description</p>
    </div>
</div>
