@{ 
    var apiResetPasswordUrl = Utility.CombineUrl(AppEnvironment.Default.Server.Url, "/api/accounts/pwd/reset");
}

<header class="padding-lg">
    <p>
        It's okay, we all forget sometimes.<br/>
        Simply, enter your email address that you used to register and we'll send you a recovery email.
    </p>
</header>
<form class="form-horizontal" id="recovery-form" action="@apiResetPasswordUrl" method="post"
      data-type="application/json"
      onsubmit="return GrafikaApp.Form.onSubmit(this)">
    <div class="form-group">
        <label class="control-label col-sm-3">
            Email Address
        </label>
        <div class="col-sm-8">
            <input class="form-control" type="text" name="email" placeholder="Email Address">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">
            &nbsp;
        </label>
        <div class="col-sm-8 text-right">
            <input class="btn btn-primary" type="submit" value="Send Password Reset" />
        </div>
    </div>
</form>

