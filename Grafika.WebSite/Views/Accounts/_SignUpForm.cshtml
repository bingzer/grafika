<div class="login-form">
    <header class="login-header">
        <h1>Sign up now for free!</h1>
        <p>
            Use your Google or Facebook account to register
        </p>
    </header>
    <div class="row text-center">
        <a href="@Utility.CombineUrl(AppEnvironment.Default.Server.Url, "accounts/google")" type="button" class="login login-submit login-oauth login-google">
            <img src="~/img/google_white.png" alt="Google Logo" />
            Google
        </a>
        <a href="@Utility.CombineUrl(AppEnvironment.Default.Server.Url, "accounts/facebook")" type="button" class="login login-submit login-oauth login-facebook">
            <img src="~/img/facebook_white.png" alt="Facebook Logo" />
            Facebook
        </a>
    </div>
    <hr />
    <div class="row">
        <div id="registration-form-controls">
            <p>
                After signing up you will receive a verification email to verify your email address.
                Inside the email, you will have a link to create your password.
            </p>
            <form action="/accounts/register" method="post">
                <input type="text" name="name" placeholder="Full Name">
                <input type="text" name="email" placeholder="Email Address">
                <div class="pull-right">
                    <input type="submit" name="login" class="login-submit login-login" value="Sign up!">
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="login-help">
            <p>
                By registering you agree to our <a href="/eula">license agreement</a>
            </p>
            <p>
                Already have an account? <a href="/signin">Login here</a>
            </p>
        </div>
    </div>
</div>