@model UserViewModel
@{
    var userIdentity = User.Identity as IUserIdentity;
}

<header class="bg-transparent page-heading page-heading-lg text-center text-white" 
    style="background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.0)), url(@Model.BackdropUrl) no-repeat; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover; ">
    <h1>Animations by @Model.User.Username</h1>
    <p>These are your animations</p>
</header>
<div class="page-wrapper" >
    <div class="page-content" id="animations">
        <div id="animation-thumbnails-container">
            @await Html.PartialAsync("~/Views/Animations/_List.cshtml")
        </div>
        <article class="text-center" style="display: inline-block; padding: 24px; width: 100%">
            <button id="more-button"
                    class="btn btn-danger"
                    onclick="GrafikaApp.Partials.renderPartial(this)"
                    data-partial="append"
                    data-url="/animations/list"
                    data-target="#animation-thumbnails-container"
                    data-callback="var d = $('#more-button').data();d.data.pageNumber++;$('#more-button').attr('data-data', JSON.stringify(d));"
                    data-data="@Model.Options.NextPage().ToJson()">
                <h6>More..</h6>
            </button>
        </article>
    </div>
</div>