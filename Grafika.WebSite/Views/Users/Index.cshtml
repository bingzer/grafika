@model UserViewModel
@{
    ViewBag.Title = Model.User.Username;

    var userIdentity = User.Identity as IUserIdentity;
    var userOptions = new AnimationQueryOptions
    {
        UserId = Model.User.Id,
        IsRemoved = false
    };

    if (userIdentity?.Id != Model.User.Id)
    {
        userOptions.IsPublic = true;
    }
}

<header class="bg-transparent page-heading page-heading-lg text-center text-white" 
    style="background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.0)), url(@Model.BackdropUrl) no-repeat; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover; ">
    <h1>Animations by @Model.User.Username</h1>
    <p>These are your animations</p>
</header>
<div class="page-wrapper" >
    <div class="page-content" data-partial="auto" data-url="/animations/list" data-data="@userOptions.ToJson()">
        Loading...
    </div>
</div>

@section footer {
    @await Html.PartialAsync("_Footer")
}
