@model Grafika.Services.Models.BaseEmailModel

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>@Model.Subject</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body style="font-family: 'Open Sans',sans-serif;">
    <td bgcolor="#ffffff" style="padding: 40px 30px 40px 30px;">
        <table cellpadding="0" cellspacing="0" width="100%" style="border-collapse: collapse; border: 0px solid #008080; max-width: 800px">
            <tr style="background-color: #008080">
                <th colspan="3" height="124" style="padding: 8px">
                    <img src="https://s3.amazonaws.com/bingzer/grafika/logo.png" alt="Grafika logo" />
                </th>
            </tr>
            <tr>
                <td colspan="3">
                    @RenderBody()
                </td>
            </tr>
            <tr style="border-top: 1px solid #c0c0c0">
                <td colspan="2">
                    <center>
                        <div style="margin-top: 4px; font-size: small; font-weight: 300; font-family: 'Open Sans',sans-serif; font-weight: 700; color: #c0c0c0">
                            <a style="color: #c0c0c0; text-decoration: none" href="@Model.HomeUrl">@Model.HomeUrl</a>&nbsp;•&nbsp;
                            <a style="color:  #c0c0c0; text-decoration: none; text-align: right" href="mailto:@Model.Sender">@@Grafika</a>
                            <br />
                            <a style="color: #c0c0c0; text-decoration: none" href="@Model.PrivacyUrl">Privacy Policy</a>
                        </div>
                    </center>
                </td>
            </tr>
        </table>
    </td>
</body>
</html>