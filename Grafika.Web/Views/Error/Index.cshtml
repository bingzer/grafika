@model ErrorViewModel


<div class="bg-transparent page-heading"></div>
<header id="header" class="page-content page-content-article text-center">
    <h1>@Model.Title</h1>
    <p class="font-larger">
        @Model.Description
    </p>
    <p class="font-smaller">
        @Model.Detail
    </p>
    <hr class="light" />
</header>
<section class="page-section text-center container-fluid">
    <article class="col-sm-offset-3 col-lg-offset-4 col-sm-6 col-lg-4">
        <header class="padding-xl">
            <p>
                <a class="btn btn-xl btn-success" href="/">Home</a>
            </p>
        </header>
    </article>
</section>


@section styles {
    <environment names="Development">
        <link href="~/css/GrafikaApp.Platforms.css" rel="stylesheet" type="text/css">
    </environment>
    <environment names="Production">
        <link href="~/css/GrafikaApp.Bundle.Platforms.min.css" rel="stylesheet" type="text/css">
    </environment>
}


@section scripts {
    <environment names="Development">
        <script type="text/javascript" src="~/js/jquery.easing.js"></script>
        <script type="text/javascript" src="~/js/GrafikaApp.Platforms.js"></script>
    </environment>
    <environment names="Production">
        <script type="text/javascript" src="~/js/GrafikaApp.Bundle.Platforms.min.js"></script>
    </environment>
}